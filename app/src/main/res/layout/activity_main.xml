<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.shared.MainActivity">


    <Button
        android:id="@+id/bloodDriveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/primary"
        android:text="find blood drive"
        android:layout_marginBottom="68dp"
        android:layout_alignBottom="@+id/requestDonationButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/requestDonationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:text="REQUEST FOR DONATION"
        android:layout_above="@+id/dashboardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <Button
        android:id="@+id/dashboardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/requestDonationButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/requestDonationButton"
        android:background="@color/primary"
        android:text="DASHBOARD" />


</RelativeLayout>
